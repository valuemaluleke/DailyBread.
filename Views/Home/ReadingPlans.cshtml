@model IEnumerable<DailyBread.Models.ReadingPlan>
@{ ViewData["Title"] = "Reading Plans"; }

<div class="container text-center" style="margin-top: 50px;">
    
    <h1 class="display-4 fw-bold">
        Reading Plans <i class="bi bi-collection-play-fill text-primary"></i>
    </h1>
    <p class="lead text-muted">Choose a journey to grow your faith.</p>
    
    <a href="/" class="btn btn-outline-secondary btn-sm mb-5 d-inline-flex align-items-center gap-2">
        <i class="bi bi-arrow-left"></i> Back to Home
    </a>
    
    <div class="row justify-content-center">
        @foreach (var plan in Model)
        {
            <div class="col-md-5 mb-4">
                <div class="card shadow-sm h-100 border-0 nav-card" style="border-radius: 20px;">
                    <div class="card-body p-4 d-flex flex-column align-items-center">
                        
                        <div class="mb-3 text-warning" style="font-size: 3.5rem;">
                            <i class="bi bi-journal-bookmark-fill"></i>
                        </div>

                        <h3 class="card-title text-dark fw-bold">@plan.Title</h3>
                        <p class="text-muted">@plan.Description</p>
                        
                        <div class="mt-auto w-100">
                            <p class="small fw-bold text-secondary d-flex justify-content-center align-items-center gap-2">
                                <i class="bi bi-calendar-week"></i> @plan.Days.Count Days
                            </p>
                            
                            <a href="/Home/PlanDay?planId=@plan.Id&day=1" class="btn btn-primary w-100 rounded-pill d-flex align-items-center justify-content-center gap-2 py-2">
                                Start Plan <i class="bi bi-rocket-takeoff-fill"></i>
                            </a>
                        </div>

                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .nav-card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        background: #fff;
    }
    .nav-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
    }
</style>